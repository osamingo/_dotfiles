# https://gist.github.com/teppeis/4117588
[user]
	name = osamingo
	email = osamingo@gmail.com

[core]
	excludesfile = ~/.gitignore
	# http://stackoverflow.com/questions/136178/git-diff-handling-long-lines
	pager = less -r
	editor = vim

[color]
	ui = auto

[push]
	# push only the current branch
	default = tracking

[branch]
	autosetuprebase = always

[merge]
	# from 1.7.6
	ff = false

[pull]
	# from 1.7.9
	rebase = true

[alias]
    co      = checkout
	cm      = commit
	st      = status
	br      = branch
	hist    = log --pretty=format:\\\"%h %ad | %s%d [%an]\\\" --graph --date=short
	tree    = log --graph --all --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(bold white)â€” %an%C(reset)%C(bold yellow)%d%C(reset)' --abbrev-commit --date=relative

# http://subtech.g.hatena.ne.jp/motemen/20120917/1347889804
# gem install git-browse-remote
[browse-remote "github.com"]
	top = https://{host}/{path}
	ref = https://{host}/{path}/tree/{short_ref}
	rev = https://{host}/{path}/commit/{commit}
	file = "https://{host}/{path}/blob/{short_rev}/{file}{line && \"#L%d\" % line}"

